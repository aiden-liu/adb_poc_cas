{
  "name": "DataOps Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:Pacific/Auckland}",
      "CLAUDE_CODE_VERSION": "1.0.84", // "latest"
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {
      "installTerraformDocs": true,
      "version": "latest",
      "tflint": "latest"
    }
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "hashicorp.terraform",
        "Meezilla.json",
        "samuelcolvin.jinjahtml",
        "redhat.vscode-yaml",
        "hediet.vscode-drawio",
        "ms-azuretools.vscode-azureresourcegroups",
        "databricks.databricks"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/node/.claude,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    "CLAUDE_ROUTER_GPT_API_BASE_URL": "${localEnv:CLAUDE_ROUTER_API_BASE_URL}",
    "CLAUDE_ROUTER_GPT_API_KEY": "${localEnv:CLAUDE_ROUTER_API_KEY}",
    "DISABLE_PROMPT_CACHING": "1",
    "CLAUDE_ROUTER_ADB_SONNECT_API_BASE_URL": "${localEnv:CLAUDE_ROUTER_ADB_SONNECT_API_BASE_URL}",
    "CLAUDE_ROUTER_ADB_SONNECT_API_KEY": "${localEnv:CLAUDE_ROUTER_ADB_SONNECT_API_KEY}"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  // Disable firewall and only run script setup-claude-router-config.sh as needed
  // "postCreateCommand": "sudo -E /usr/local/bin/init-firewall.sh && /usr/local/bin/setup-claude-router-config.sh"
  "postCreateCommand": "/usr/local/bin/setup-claude-router-config.sh && curl -LsSf https://astral.sh/uv/install.sh | sh && git config --global core.eol lf && git config --global core.autocrlf input && git config --global user.name 'bot' && git config --global user.email 'bot-databricks@datamlops.com' && sudo /usr/local/bin/databricks-cli-install.sh && databricks -v"
}
